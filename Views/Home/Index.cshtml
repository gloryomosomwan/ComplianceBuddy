@model ComplianceBuddy.Models.HomeViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .card-deck .card {
        min-width: 280px;
    }

    .compliance-status {
        font-size: 0.9rem;
    }
</style>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">@ViewData["Title"]</h1>
        <div>
            <a asp-controller="Vehicles" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Add Vehicle
            </a>
            <a asp-controller="Inspections" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-clipboard-check"></i> Add Inspection
            </a>
        </div>
    </div>

    <h2 class="h4">My Vehicles</h2>
    <p>An overview of your vehicles and their compliance status.</p>

    @if (Model.Vehicles.Any())
    {
        <div class="row">
            @foreach (var vehicleVM in Model.Vehicles)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title">@vehicleVM.Vehicle.Year @vehicleVM.Vehicle.Make @vehicleVM.Vehicle.Model</h5>
                                @if (vehicleVM.IsCompliant)
                                {
                                    <span class="badge bg-success compliance-status">Compliant</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger compliance-status">Not Compliant</span>
                                }
                            </div>
                            <h6 class="card-subtitle mb-2 text-muted">VIN: @vehicleVM.Vehicle.Vin</h6>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <a asp-controller="Vehicles" asp-action="Edit" asp-route-id="@vehicleVM.Vehicle.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-controller="Vehicles" asp-action="Delete" asp-route-id="@vehicleVM.Vehicle.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this vehicle?');">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            You haven't added any vehicles yet. <a asp-controller="Vehicles" asp-action="Create" class="alert-link">Add one now</a> to get started!
        </div>
    }

    <hr class="my-4">

    <h2 class="h4">Inspection History</h2>
    @if (Model.Inspections.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Vehicle</th>
                        <th>Inspection Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var inspection in Model.Inspections.OrderByDescending(i => i.Date))
                    {
                        <tr>
                            <td>@inspection.Vehicle.Make @inspection.Vehicle.Model (@inspection.Vehicle.Vin)</td>
                            <td>@inspection.Date.ToShortDateString()</td>
                            <td>@(inspection.Passed ? "Passed" : "Failed")</td>
                            <td>
                                <a asp-controller="Inspections" asp-action="Edit" asp-route-id="@inspection.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-controller="Inspections" asp-action="Delete" asp-route-id="@inspection.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this inspection?');">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No inspection records found.</p>
    }
</div>