@model ComplianceBuddy.Models.Inspection

<div class="container">
  <h2>Edit Inspection</h2>
  <form asp-action="ConfirmEdit" method="post" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()
    <div>
      <label asp-for="VehicleId" class="form-label"></label>
      <select asp-for="VehicleId" class="form-control" asp-items="@(ViewData["Vehicles"] as SelectList)">
        <option value="">-- Select a VIN --</option>
      </select>
      <span asp-validation-for="VehicleId" class="text-danger"></span>
    </div>
    <div>
      <label asp-for="Date" class="form-label"></label>
      <input asp-for="Date" class="form-control" />
      <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-check my-3">
      <input asp-for="Passed" class="form-check-input" />
      <label asp-for="Passed" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
  </form>
</div>